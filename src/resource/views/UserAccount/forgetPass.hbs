<div class="login-form-container">

    <form action="#" method = "post">
        <h3>Change your password</h3>
        <input type="password" name="password" placeholder="enter your password" id="" class="box" required>
        <input type="password" name="confirmPassword" placeholder="confirm your password" id="" class="box" required>
        {{#if message}}
        <p style="font-size: smaller; color: red">confirm password is wrong, try again</p>
        {{/if}}
        <input type="submit" value="Submit" class="btn">
        <p>already have an account? <a href="sign-in">click here</a></p>
        <p>don't have an account? <a href="sign-up">create one</a></p>
    </form>

</div>
    